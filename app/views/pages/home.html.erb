
<div class="my-banner">


  <div class="home-page">
    <div>
      <h1 class="text-success">LA TORTUGA BAY<strong></strong></h1>
      <p class="text-success">The perfect ship for all your expectations needs</p>
    </div>

    <div class= "search">
      <%= form_tag pirate_ships_path , method: :get do %>
      <div class="d-flex bg-white rounded p-2">
        <div class="flex-grow-1 ">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control border-0 shadow-none" ,
            placeholder: "Find a ship?"
          %>
        </div>
        <div>
          <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  </div>
