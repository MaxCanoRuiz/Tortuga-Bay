<div class="ships_container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Pirate Ships</h1>
    </div>
  </div>

  <div class="row">
    <% @pirate_ships.each do |pirate_ship| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="ship-card">
          <div class="ship-card-image" style="background-image: url('<%= cl_image_path pirate_ship.pictures.first.key %>')"></div>
          <div class="ship-card-content">
            <div class="ship-card-title">
              <h2><%= pirate_ship.name %></h2>
            </div>
            <p><%= pirate_ship.description %></p>
          </div>
          <div class="ship-card-actions">
            <div class='see-button'><%= link_to 'See Ship', pirate_ship_path(pirate_ship) %></div>
            <% if current_user == pirate_ship.user %>
            <div class='edit-button'><%= link_to 'Edit Ship', edit_pirate_ship_path(pirate_ship) %></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
