<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Pirate Ships</h1>
    </div>
  </div>

  <div class="row">
    <% @pirate_ships.each do |pirate_ship| %>
      <div class="col-4">
        <div class="ship-card">
          <div class="ship-card-image" style="background-image: url('<%= cl_image_path pirate_ship.pictures.first.key %>')"></div>
          <div class="ship-card-content">
            <div class="ship-card-title">
              <h3><%= pirate_ship.name %></h3>
            </div>
            <h4><%= pirate_ship.ship_type %></h4>
            <p><%= pirate_ship.description %></p>
              <div class="flex">
                <i class="material-icons mr-2">Capacity</i><span><%= pirate_ship.capacity %></span>
                <i class="material-icons mr-2">Cannons</i> <%= pirate_ship.number_of_canons %>
              </div>
              <div class="flex">
                <i class="material-icons mr-2">Parrot Friendliness</i> <%= pirate_ship.parrot_friendlyness %>
              </div>
          </div>
          <div class="ship-card-actions">
            <%= link_to 'See Ship', pirate_ship_path(pirate_ship) %>
            <%= link_to 'Edit', edit_pirate_ship_path(pirate_ship), class: 'ml-3 text-warning' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
