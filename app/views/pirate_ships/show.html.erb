<div class="container">

  <div class='ship-intro'>
    <% @pirate_ship.pictures.each do |picture| %>
      <%= cl_image_tag picture.key, alt: @pirate_ship.name, :class => "ship-page-image"%>
    <% end %>
    <P><%= @pirate_ship.description%></p>
    <%=image_tag @pirate_ship.user.avatar_url, alt:@pirate_ship.user.name, class: 'avatar-larger'%>
  </div>

  <% booker = @pirate_ship.bookings.any? {|booking| booking.user == current_user}%>
  <% if booker == true %>
    <div class=book-button><%=link_to "Book again", new_pirate_ship_booking_path(@pirate_ship)%></div>
    <div class=book-button><%=link_to "Check your booking", new_pirate_ship_booking_path(@pirate_ship)%></div>
  <%else%> 
    <% if current_user != @pirate_ship.user %>
      <div class=book-button><%=link_to "Book now", new_pirate_ship_booking_path(@pirate_ship)%></div>
    <% end %>
  <% end %>

 <div id="map"
     style="width: 100%; height: 830px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div>
  
    <ul>
      <li>Port: <%= @pirate_ship.port%></li>
      <li>Type: <%= @pirate_ship.ship_type%></li>
      <li>Capacity: <%= @pirate_ship.capacity%></li>
      <li>Number of cannons: <%= @pirate_ship.number_of_canons%></li>
      <li>Parrot friendlyness: <%= @pirate_ship.parrot_friendlyness%></li>
      <li>Country: <%= @pirate_ship.country%></li>
    </ul>
</div>
<div class="back-button"><%=link_to "Go back", pirate_ships_path%></div>
