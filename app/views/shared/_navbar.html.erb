<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to '/', class: 'navbar-brand' do %>
      <div class="d-flex align-items-center">
        <%= image_tag 'tortugabay.png' %>
        <p class="brand-name">Tortuga Bay</p>
      </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav d-flex align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "All Ships", "/pirate_ships", class: "nav-link" %>
          </li>

          <div class="dropdown">
            <a type= "button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <%= image_tag (current_user.avatar_url || 'pirate_skull'), class: "avatar" %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", "/dashboard", class: "dropdown-item" %>
              <%= link_to "Edit profile", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
