<div class="navbar-white">
  <%= link_to '/' do %>
    <div class="brand">
      <%= image_tag 'tortugabay.png', class: 'logo' %>
      <p>Tortuga Bay</p>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <div class="navbar-links">
      <ul>
        <li>
          <%= link_to "All Ships", "/pirate_ships", class: "navbar-link" %>
        </li>
        <li>
          <%= link_to "Map", "/map", class: "navbar-link" %>
        </li>
        <li>
          <div class="dropdown">
            <a type= "button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <%= image_tag (current_user.avatar_url || 'pirate_skull.jpg'), class: "avatar" %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "All Ships", "/pirate_ships", class: "dropdown-item navbar-hide"%>
              <%= link_to "Map", "/map", class: "dropdown-item navbar-hide border-bottom" %>
              <%= link_to "Dashboard", "/dashboard", class: "dropdown-item" %>
              <%= link_to "Edit profile", "#", class: "dropdown-item" %>
              <%= link_to "Create ship", "/pirate_ships/new", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        </li>
      </ul>
    </div>
  <% else %>
    <div class="navbar-links">
      <li>
        <%= link_to "Login", new_user_session_path%>
      </li>
    </div>
  <% end %>
</div>
